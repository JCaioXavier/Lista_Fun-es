import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        do {
            System.out.println("Usu치rio: ");
            String loginU = scan.next();

            System.out.println("Senha: ");
            String loginS = scan.next();

            if (controlador(loginU, loginS)) {
                System.out.println("Login bem-sucedido!");
                return;
            } else {
                System.out.println("Usu치rio ou senha incorretos");
            }
        } while (true);
    }

    public static Map<String, String> controlador() {
        Map<String, String> usuariosSenhas = new HashMap<>();

        usuariosSenhas.put("teste", "admin");
        usuariosSenhas.put("teste2", "admin2");
        usuariosSenhas.put("teste3", "admin3");
        usuariosSenhas.put("teste4", "admin4");
        usuariosSenhas.put("Thiago", "thigas");

        return usuariosSenhas;
    }

    public static boolean controlador(String loginU, String loginS) {
        Map<String, String> usuariosSenhas = controlador();

        // Verifica se o usu치rio existe e se a senha est치 correta
        return usuariosSenhas.containsKey(loginU) && usuariosSenhas.get(loginU).equals(loginS);
    }
}
